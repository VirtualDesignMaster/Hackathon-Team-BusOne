<p id="notice"><%= notice %></p>

<h1>User Skills</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Skill</th>
      <th>Proficiency</th>
      <th>Years</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_skills.each do |user_skill| %>
      <tr>
        <td><%= user_skill.skill.title %></td>
        <td><%= user_skill.proficiency %></td>
        <td><%= user_skill.years %></td>
        <td><%= link_to 'Show', user_skill %></td>
        <td><%= link_to 'Edit', edit_user_skill_path(user_skill) %></td>
        <td><%= link_to 'Destroy', user_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

