<% if current_user %>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4"><%= "Hi, #{current_user.first_name}!" %></h1>
      <p class="lead">Welcome aboard!</p>
    </div>
  </div>
<% else %>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4"><%= 'Hello!' %></h1>
      <p class="lead"></p>
        Please,
        <%= link_to('sign in with LinkedIn', omniauth_authorize_path(:user, :linkedin)) %>
        to continue browsing.
      </p>
    </div>
  </div>
<% end %>